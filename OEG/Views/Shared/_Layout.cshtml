<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OEG</title>
    @*<link rel="shortcut icon" href="~/img/favicon.jpg" type="image/x-icon" />*@
    <link rel="shortcut icon" href="https://www.OEGReports.com.au/favicon.ico?v=2" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link href='https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic' rel='stylesheet' type='text/css'>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                @Html.Partial("_LogoPartial")
            </div>
        </div>
    </nav>
    
    @RenderBody()
    <footer>
        <div class="container">

            <p class="copyright text-muted small">Copyright &copy; OEG 2014. All Rights Reserved. ABN - 13 600 022 697</p>

        </div>
    </footer>

        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <script>
            $('.navbar-collapse ul li a').click(function () {

                $('.navbar-toggle:visible').click();
            });
        </script>
</body>
</html>
